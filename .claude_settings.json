{
  "permissions": {
    "allow": [
      "Bash(git checkout:*)",
      "Bash(rm:*)",
      "Bash(just unit-test:*)",
      "Bash(turbo typecheck:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "ESLint",
    "guru",
    "context7",
    "datetime",
    "mongodb",
    "jira",
    "datadog",
    "datadog_logs",
    "slack"
  ],
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "300000",
    "BASH_MAX_TIMEOUT_MS": "720000"
  }
}
